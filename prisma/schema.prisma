generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  viewer
}

model User {
  id           String   @id @default(uuid())
  fullName     String
  phone        String
  email        String
  password     String
  refreshToken String? // For storing refresh token
  role         Role     @default(viewer)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
